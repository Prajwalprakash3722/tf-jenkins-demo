# Fluent Bit Configuration
[SERVICE]
    # Flush interval (in seconds) for flushing records to destination.
    flush        1
    daemon       Off
    log_level    info
    parsers_file parsers.conf
    plugins_file plugins.conf

    # HTTP Server settings (disabled).
    http_server  off
    http_listen  0.0.0.0
    http_port    2020

# Node Exporter Metrics Input
[INPUT]
    name            node_exporter_metrics
    tag             node_metrics
    scrape_interval 5

# Tail Input for Nginx logs
[INPUT]
    name            tail
    path            /var/log/nginx/*.log
    tag             nginx.log
    mem_buf_limit   8MB
    skip_long_lines On
    rotate_wait     30
    ignore_older    1h
    parser          json
    Path_Key        file

[INPUT]
    name            tail
    path            /var/log/*.log
    tag             system.log
    mem_buf_limit   8MB
    skip_long_lines On
    rotate_wait     30
    ignore_older    1h
    Path_Key        file

[INPUT]
    Name          nginx_metrics
    tag           nginx.metrics
    Nginx_Plus    off

# Output to Prometheus Remote Write
[OUTPUT]
    name        prometheus_remote_write
    alias       output_prometheus
    match       node_metrics
    host        {{ hostvars['prometheus']['ipv4'][0] }}
    uri         /api/v1/write
    port        9090
    tls         off
    log_response_payload off  
    add_label   instance {{ hostname }}
    add_label   job system-monitoring

[OUTPUT]
    name        prometheus_remote_write
    Match       nginx.metrics
    alias       metrics_output_prometheus
    host        {{ hostvars['prometheus']['ipv4'][0] }}
    uri         /api/v1/write
    port        9090
    tls         off
    log_response_payload off  
    add_label   instance {{ hostname }}
    add_label   job nginx-monitoring

[OUTPUT]
    name   loki
    match  *.log
    host   {{ hostvars['loki']['ipv4'][0] }}
    labels instance={{ hostname }}